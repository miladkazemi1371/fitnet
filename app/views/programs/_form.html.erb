
<body background="/assets/gray2.jpg" style="background-repeat: no-repeat;">
<title> sign up </title>
<script src="sign_up.js" type="text/javascript"></script>
<div id="msform" style="width:600px; background : rgba(86, 70, 70, 1) ; opacity : 0.9;border-radius : 4px;margin-top : 30px;padding :15px; margin-right:-81%"  >


<%= form_for(@program) do |f| %>


  <% @workouts.each do |wo| %>
  <%= wo.name %>

  <% if @program.workouts.include?(wo) %>
    <%=check_box_tag "workout[#{wo.id}]" , nil , :checked => true  , style:'float' %>
  <% else %>
    <%=check_box_tag "workout[#{wo.id}]" , style:'float' %>
    <%end%>
    <br>
  
<% end %>
  
   <label class="float" style="color:white;"  >نام برنامه</label><br><br>
    <%= f.text_field :name ,class:'inp-text' ,style:" width: 40%;"%><br>

    <label class="float" style="color:white;"  >مدت زمان برنامه</label><br><br>
    <%= f.number_field :duration , class:'inp-text',style:" width: 40%; margin-right: 0%;" %><br><br>

    <%= f.label :توضیحات ,class:'float' ,style:" color:white;" %> <br>
    <%= f.text_field :description ,class:'inp-text' , style: 'width:389px; height:246px;'%><br><br><br><br>



  <%= f.submit "ذخیره" , class: 'btn btn-danger' , style: 'color: white;width: 20%'%>
<% end %>
 </div>

 </body>